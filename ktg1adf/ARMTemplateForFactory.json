				"typeProperties": {
					"url": "[parameters('ktg1blob_properties_typeProperties_url')]",
					"tenant": "[parameters('ktg1blob_properties_typeProperties_tenant')]",
					"servicePrincipalId": "[parameters('ktg1blob_properties_typeProperties_servicePrincipalId')]",

{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ktg1adf"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/bricksPipe')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "DataBricks Pipe",
				"activities": [
					{
						"name": "notebookArgs",
						"type": "DatabricksNotebook",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"notebookPath": "/Users/ygutfreund@outlook.com/adfArgs",
							"baseParameters": {
								"firstName": "@pipeline().parameters.firstName",
								"lastName": "@pipeline().parameters.lastName"
							}
						},
						"linkedServiceName": {
							"referenceName": "ktg1bricks",
							"type": "LinkedServiceReference"
						}
					}
				],
				"parameters": {
					"firstName": {
						"type": "string",
						"defaultValue": "Yechezkal"
					},
					"lastName": {
						"type": "string",
						"defaultValue": "Gutfreund"
					}
				},
				"annotations": []
			},
			"dependsOn": []
		}
	]
}